{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "outDir": "./build",
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es6",
      "dom",
      "esnext.asynciterable"
    ],
    "jsx": "react",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noUnusedLocals": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack"
  ]
}
